# Supabase Configuration
# Find these values in your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase Service Role Key (server-side only)
# WARNING: This is a sensitive key that should NEVER be exposed to the client
# Find this in: https://supabase.com/dashboard/project/_/settings/api (service_role key)
SUPABASE_SERVICE_ROLE_KEY=

# Supabase Storage Bucket Name
# This is typically 'wine-labels' or similar - check your Supabase Storage buckets
SUPABASE_STORAGE_BUCKET=

# OpenAI API Key (server-side only)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
